upstream <%= node['nginx']['app'] %> {
  server unix:///var/www/<%= node['nginx']['app'] %>/shared/sockets/puma.sock fail_timeout=0;
}

server {
#  listen 80;
  server_name <%= node['nginx']['servername'] %>; # change to match your URL
  root <%= node['nginx']['default_root'] %>/<%= node['nginx']['app'] %>/current/public;

  access_log <%= node['nginx']['log_dir'] %>/<%= node['nginx']['app'] %>.access.log;
  error_log <%= node['nginx']['log_dir'] %>/<%= node['nginx']['app'] %>.error.log info;

  try_files $uri/index.html $uri @<%= node['nginx']['app'] %>;

  location @<%= node['nginx']['app'] %> {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    proxy_pass http://<%= node['nginx']['app'] %>;
    }
  location ~ ^/(assets)/  {
    gzip_static on; # to serve pre-gzipped version
    expires max;
    add_header Cache-Control public;
    }
# auth_basic "Welcome to <%= node['nginx']['app'] %>";
# auth_basic_user_file <%= node['nginx']['default_root'] %>/<%= node['nginx']['app'] %>/current/.htpasswd;


  error_page 500 502 503 504 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 10;

}

